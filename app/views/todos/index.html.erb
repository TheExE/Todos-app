<h1>Todos listing</h1>

<%= link_to "Create new todo", new_todo_path %>
<br>
<br>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
  <tr>
  <% @todos.each do |todo| %>
    <tr>
      <td> <%= todo.name %> </td>
      <td> <%= todo.description %> </td>
      <td> <%= link_to "Show", todo_path(todo) %> </td>
      <td> <%= link_to "Edit", edit_todo_path(todo) %> </td>
      <td> <%= link_to "Delete", todo_path(todo), method: :delete %> </td>
    <tr>
  <% end %>
</table>